@page "/ideas"
@using Domain
@using Services
@inject IdeaService IdeaService

<h3>Список идей</h3>

@if (isLoading)
{
    <p><em>Загрузка идей...</em></p>
}
else if (ideas == null || ideas.Count == 0)
{
    <p>Идеи не найдены.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Название</th>
                <th>Проблема</th>
                <th>Статус</th>
                <th>Инициатор</th>
                <th>Создано</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var idea in ideas)
            {
                <tr>
                    <td>@idea.Name</td>
                    <td>@idea.Problem</td>
                    <td>@idea.Status</td>
                    <td>@(idea.Initiator?.FirstName + " " + idea.Initiator?.LastName)</td>
                    <td>@idea.CreatedAt.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Idea> ideas;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        ideas = await IdeaService.GetIdeasAsync();
        isLoading = false;
    }
}
