@namespace HITSBlazor.Components

<div class="bg-white border-end" style="height: 100vh; width: 85px; min-width: 85px; max-width: 85px;">
    @if (isLoading)
    {
        <div class="p-3 d-flex flex-column gap-2">
            @for (int i = 0; i < 6; i++)
            {
                <div class="placeholder-glow w-100">
                    <span class="placeholder w-100 bg-secondary rounded small" style="height: 50px"></span>
                </div>
            }
        </div>
    }
    else
    {
        
    }
</div>

@code {
    private bool isLoading = true;
}