@namespace HITSBlazor.Components.LoadingPlaceholder

<div class="placeholder-glow w-100">
    <span class="@GetPlaceholderClass()"></span>
</div>

@code {
    [Parameter] public PlaceholderHeight Height { get; set; } = PlaceholderHeight.Medium;
    [Parameter] public string? ClassName { get; set; }

    private string GetPlaceholderClass()
    {
        var classes = new List<string>
        {
            "placeholder",
            "w-100",
            "bg-secondary",
            "rounded",
            GetHeightClass()
        };

        if (!string.IsNullOrEmpty(ClassName))
            classes.Add(ClassName);

        return string.Join(" ", classes);
    }

    private string GetHeightClass()
    {
        return Height switch
        {
            PlaceholderHeight.Small => "small",
            PlaceholderHeight.Medium => "height-medium",
            PlaceholderHeight.Third => "height-third",
            PlaceholderHeight.Medium200 => "height-medium-200",
            PlaceholderHeight.Second => "height-second",
            PlaceholderHeight.Large => "height-large",
            PlaceholderHeight.Large500 => "height-large-500",
            _ => "height-medium"
        };
    }
}