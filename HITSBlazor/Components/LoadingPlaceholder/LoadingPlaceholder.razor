@namespace HITSBlazor.Components.LoadingPlaceholder

<div class="placeholder-glow w-100">
    <span class="@GetPlaceholderClass()"></span>
</div>

@code {
    [Parameter] public string? Height { get; set; } = "medium";
    [Parameter] public string? ClassName { get; set; }

    private string GetPlaceholderClass()
    {
        var classes = new List<string>
        {
            "placeholder",
            "w-100",
            "bg-secondary",
            "rounded"
        };

        // Добавляем высоту
        if (!string.IsNullOrEmpty(Height))
            classes.Add(GetHeightClass());

        // Добавляем кастомные классы
        if (!string.IsNullOrEmpty(ClassName))
            classes.Add(ClassName);

        return string.Join(" ", classes);
    }

    private string GetHeightClass()
    {
        return Height?.ToLower() switch
        {
            "small" => "height-small",
            "medium" => "height-medium",
            "third" => "height-third",
            "medium-200" or "second" => "height-medium-200",
            "large" => "height-large",
            "large-500" => "height-large-500",
            _ => "height-medium"
        };
    }
}