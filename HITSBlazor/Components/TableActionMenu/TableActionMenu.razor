@namespace HITSBlazor.Components.TableActionMenu

<td class="py-3" style="position: relative;" @ref="_containerRef">
    <div class="float-end idea-row-icon">
        <i @ref="_triggerRef"
           @onclick="@ToggleMenu"
           class="bi bi-three-dots fs-5 @(IsOpen ? "active" : string.Empty)"
           aria-expanded="@IsOpen">
        </i>
        <div @onclick:stopPropagation
             class="dropdown-menu @(IsOpen ? "idea-row-modal show" : string.Empty)"
             style="@_menuStyle">
            <ul class="list-group list-group-flush">
                @foreach (var action in Actions)
                {
                    <li @onclick="@(() => HandleActionClick(action))"
                        class="list-group-item list-group-item-action px-2 py-1 @(action == TableAction.Delete ? "text-danger" : string.Empty)">
                        @GetActionText(action)
                    </li>
                }
            </ul>
        </div>
    </div>
</td>