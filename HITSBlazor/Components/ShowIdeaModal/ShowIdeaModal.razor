@namespace HITSBlazor.Components.ShowIdeaModal
@using HITSBlazor.Components.Placeholder
@using HITSBlazor.Models.Ideas.Entities
@using HITSBlazor.Services.Ideas

<div class="idea-modal p-3 h-100 overflow-y-scroll">
    @if (isLoading || CurrentIdea is null)
    {
        <div class="w-75" style="@placeholder_style">
            @if (isLoading || CurrentIdea is null)
            {
                <Placeholder Width="w-75" />
                <div class="p-2 bg-white rounded-3 d-flex flex-column gap-1">
                    <Placeholder Width="w-50" />
                    <Placeholder />
                    <Placeholder />
                    <Placeholder />
                </div>
                <div class="p-2 bg-white rounded-3 gap-2 d-flex">
                    @for (int i = 0; i < 3; ++i)
                    {
                        <Placeholder Width="w-25" Height="PlaceholderHeight.Small" />
                    }
                </div>
                <div class="pb-2 bg-white rounded-3">
                    <div class="d-grid gap-3 pt-2 px-2 w-100">
                        @for (int chatItem = 0; chatItem < 3; ++chatItem)
                        {
                            <div class="card rounded-3 shadow" style="@advertisementStyle @(chatItem % 2 == 0 ? currentUserCommentStyle : "")">
                                <div class="card-header d-flex gap-3 justify-content-between align-items-center">
                                    <Placeholder Width="w-25" />
                                    <Placeholder Width="w-75" />
                                </div>
                                <div class="card-body">
                                    <Placeholder />
                                    <Placeholder />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div style="display: flex; flex-direction: row; flex-wrap: nowrap; align-items: stretch; justify-content: flex-start; gap: 16px;">
                    <button class="btn d-flex btn-primary">
                        <i class="bi bi-backspace-fill fs-5"></i>
                        Назад
                    </button>
                    <span class="p-2 w-100 bg-white rounded-3 fs-4 text-primary text-nowrap overflow-x-scroll">
                        @CurrentIdea.Name
                    </span>
                </div>
                <ul class="list-group rounded-3">
                    <!-- //TODO: Текст можно скрывать, нужно реализовать это, похоже на скрытие и открытие в навигации -->
                    <li class="list-group-item p-0 overflow-hidden">
                        <button type="button" class="btn d-flex btn-light w-100">
                            Проблема
                        </button>
                        <div>
                            <div class="list-group">
                                <div class="p-2">@CurrentIdea.Problem</div>
                            </div>
                        </div>
                    </li>
                </ul>
            }
        </div>
        <div class="pb-3 w-25 bg-white rounded" style="@placeholder_style">
            <div class="bg-primary py-4 rounded-top-3"></div>
            <div class="px-2">
                <Placeholder Width="w-50" />
                <Placeholder />
                <Placeholder />
            </div>
            <div class="px-2">
                <Placeholder Width="w-50" />
                <Placeholder />
                <Placeholder />
                <Placeholder />
            </div>
            <div class="mt-3 px-2">
                <Placeholder />
                <Placeholder Width="w-75" />
                <Placeholder Width="w-75" />
            </div>
        </div>
    }
    else
    {
        
    }
</div>

@code {
    private bool isLoading = true;

    private string placeholder_style = "height: fit-content; display: flex; flex-direction: column; flex-wrap: nowrap; align-items: stretch; justify-content: flex-start; gap: 16px;";
    private string advertisementStyle = "width: 400px;";
    private string currentUserCommentStyle = "justify-self: end;";

    private Idea? CurrentIdea { get; set; } = null;

    [Inject]
    private IIdeasService IdeasService { get; set; } = null!;

    [Parameter]
    public Guid IdeaId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;

        CurrentIdea = await IdeasService.GetIdeaByIdAsync(IdeaId);

        isLoading = false;
    }
}