@namespace HITSBlazor.Components.Collapse

<div id="@Id" class="@GetCollapseClass()" style="@GetCollapseStyle()">
    <div class="list-group">
        @ChildContent
    </div>
</div>

@code {
    [Parameter] public string Id { get; set; } = Guid.NewGuid().ToString();
    [Parameter] public string? ClassName { get; set; }
    [Parameter] public bool IsExpanded { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }

    private string GetCollapseClass()
    {
        var classes = new List<string> { "collapse" };

        if (IsExpanded)
            classes.Add("show");

        if (!string.IsNullOrEmpty(ClassName))
            classes.Add(ClassName);

        return string.Join(" ", classes);
    }

    private string GetCollapseStyle()
    {
        return IsExpanded ? "" : "display: none;";
    }
}