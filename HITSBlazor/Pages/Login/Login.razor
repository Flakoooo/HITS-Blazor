@using HITSBlazor.Components

<PageTitle>Авторизация</PageTitle>

<div class="page-layout">
    <div class="page-layout__content-wrapper w-100">
        <div class="page-layout__content page-layout__content--no-header login-page__content p-3">
            <form @onsubmit="HandleLogin" @onsubmit:preventDefault="true" class="form-layout p-3 rounded-3 shadow" style="margin-bottom: 1rem">
                <span class="fs-3 text-primary text-center">Авторизация</span>
                <div class="input-group">
                    <span class="input-group-text fs-6">&#64;</span>
                    <input type="text"
                           @bind="loginModel.Email"
                           @bind:event="oninput"
                           class="form-control"
                           placeholder="Введите логин" />
                </div>
                <div class="input-group">
                    <span class="input-group-text fs-6">
                        <i class="bi bi-key"></i>
                    </span>
                    <input type="password"
                           @bind="loginModel.Password"
                           @bind:event="oninput"
                           class="form-control"
                           placeholder="Введите пароль" />
                </div>
                <div class="text-center">
                    <a href="/recovery-password" class="forgot-password-link text-decoration-underline">
                        Забыли пароль?
                    </a>
                </div>
                <button type="submit" class="btn btn-primary w-100" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        <span>Вход...</span>
                    }
                    else
                    {
                        <span>Войти</span>
                    }
                </button>
            </form>
        </div>
    </div>
</div>