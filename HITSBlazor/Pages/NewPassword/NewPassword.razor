@using HITSBlazor.Components.Button
<PageTitle>Новый пароль</PageTitle>

<div class="page-layout">
    <div class="page-layout__content-wrapper w-100">
        <div class="page-layout__content page-layout__content--no-header new-pass__content p-3">
            <form @onsubmit="HandleResetPassword" @onsubmit:preventDefault="true" class="form-layout p-3 rounded-3 shadow">
                <span class="fs-3 text-primary text-center">Новый пароль</span>

                <div class="input-group">
                    <span class="input-group-text fs-6">
                        <i class="bi bi-fonts"></i>
                    </span>
                    <input type="text"
                           @bind="newPasswordModel.Code"
                           @bind:event="oninput"
                           class="form-control"
                           placeholder="Введите код аутентификации"
                           maxlength="6" />
                </div>

                <div class="input-group">
                    <span class="input-group-text fs-6">
                        <i class="bi bi-key"></i>
                    </span>
                    <input type="password"
                           @bind="newPasswordModel.Password"
                           @bind:event="oninput"
                           class="form-control"
                           placeholder="Введите новый пароль" />
                </div>

                <Button Type="submit" 
                        Text="@(isLoading ? "Изменение..." : "Изменить пароль")" 
                        Variant="primary" 
                        ClassName="w-100"
                        IsLoading="@isLoading"
                        Disabled="@isLoading" />
            </form>
        </div>
    </div>
</div>