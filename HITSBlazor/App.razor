@using HITSBlazor.Services.Auth
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
@inject IAuthService AuthService

<CascadingAuthenticationState>
    @if (_isInitialized)
    {
        <Router AppAssembly="@typeof(App).Assembly">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                    <NotAuthorized>
                        @{
                            Navigation.NavigateTo($"login?returnUrl={Navigation.ToBaseRelativePath(Navigation.Uri)}");
                        }
                    </NotAuthorized>
                    <Authorizing>
                        <div class="auth-loading d-flex justify-content-center align-items-center vh-100">
                            <div class="text-center">
                                <div class="spinner-border text-primary mb-3" style="width: 3rem; height: 3rem;" role="status">
                                    <span class="visually-hidden">Проверка авторизации...</span>
                                </div>
                                <p class="text-muted">Проверка авторизации...</p>
                            </div>
                        </div>
                    </Authorizing>
                </AuthorizeRouteView>
            </Found>
            <NotFound>
                <LayoutView Layout="@typeof(MainLayout)">
                    <div class="text-center p-5">
                        <h1>404</h1>
                        <p>Страница не найдена</p>
                    </div>
                </LayoutView>
            </NotFound>
        </Router>
    }
</CascadingAuthenticationState>

@code {
    private bool _isInitialized = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await AuthService.InitializeAsync();
            _isInitialized = true;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка инициализации: {ex.Message}");
            _isInitialized = true;
        }
    }
}